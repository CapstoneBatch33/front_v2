# Python Server Configuration (receives ESP32 data)
# This is the server that your ESP32 is sending data to
PYTHON_SERVER_IP=192.168.1.152
PYTHON_SERVER_PORT=5000

# Direct ESP32 Configuration (if connecting directly to ESP32)
# ESP32_IP=192.168.1.100
# ESP32_PORT=80

# Weather API Configuration
# Get your free API key from: https://openweathermap.org/api
# Leave empty or set to 'demo_key' to use mock weather data
OPENWEATHER_API_KEY=demo_key